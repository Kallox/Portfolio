---
import HeroButton from "./HeroButton.astro";
---

<section class="flex flex-col gap-4 my-12" id="hero">
    <div
        class="w-64 h-64 m-auto rounded-full bg-purple-800 overflow-hidden flex justify-center items-center"
    >
        <img class="" src="images/profile.png" alt="Imagen Claudio Ramirez" />
    </div>

    <h1 class="text-4xl font-semibold text-center">
        ¡Hola! Me llamo <br />
        <span class="text-purple-600 font-bold">Claudio Ramírez</span>
    </h1>
    <p class="text-center">
        Soy un <strong class="text-purple-600 font-semibold"
            >Ingeniero Cívil en Computación e Informática
        </strong>
        con experiencia en desarrollo de aplicaciones web en la región de Magallanes
        y la antártica chilena, Chile.
    </p>
    <div class="flex justify-center gap-5">
        <HeroButton
            alt="Enlace a mi GitHub"
            href="https://github.com/Kallox"
            icon="images/github.svg"
            label="GitHub"
        />
        <HeroButton
            alt="Enlace a mi Linkedin"
            href="https://www.linkedin.com/in/claudio-ramirez-1b2650278/"
            icon="images/linkedin.svg"
            label="LinkedIn"
        />
        <HeroButton
            alt="Enlace a mi Curriculum Vitae"
            href="https://www.linkedin.com/in/claudio-ramirez-1b2650278/"
            icon="images/pdf.svg"
            label="CV"
        />
    </div>
</section>
