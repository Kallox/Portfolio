---
interface Props {
    alt: string;
    href: string;
    icon: string;
    label: string;
}

const { alt, href, icon, label } = Astro.props;
---

<a
    class="flex items-center justify-center h-10 border-2 rounded-3xl p-2 w-32 gap-2 text-lg transition-all duration-300 hover:border-purple-700"
    href={href}><img src={icon} alt={alt} class="h-full" /> {label}</a
>
