---
import SectionTitle from "./SectionTitle.astro";
import Card from "./Card.astro";

const projects = [
    {
        title: "DSpace Form Builder",
        description:
            "Pagina web para la creación y edición de formularios de DSpace",
        img: "images/projects/dspace-form.png",
        live: "https://dspace-form.claudramir.dev/",
        repository: "https://github.com/Kallox/DSpace-Form-Builder",
        tecnologies: ["react", "nextjs", "tailwind"],
    },
];
---

<section id="projects" class="my-12">
    <SectionTitle title="Proyectos personales" />

    <ul class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {
            projects.map((project) => (
                <li class="flex flex-col">
                    <div class="bg-zinc-800/75 shadow-lg rounded-xl border-2 border-purple-700 overflow-hidden">
                        <img
                            src={project.img}
                            alt="project image"
                            width="400"
                            height="400"
                            class="w-full h-48 object-cover"
                        />
                        <div class="p-4">
                            <h3 class="text-xl font-semibold mb-2 text-purple-300">
                                {project.title}
                            </h3>
                            <p class="text-sm text-gray-300 mb-4">
                                {project.description}
                            </p>
                            <hr class="my-4" />
                            <div class="flex justify-between">
                                <div class="flex gap-2">
                                    <a
                                        href={project.live}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="bg-purple-700 hover:bg-purple-500 text-white px-4 py-2 rounded-md text-sm flex items-center justify-center"
                                    >
                                        Live
                                    </a>
                                    <a
                                        href={project.repository}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="bg-black hover:bg-gray-950 text-white px-4 py-2 rounded-md flex items-center justify-center"
                                    >
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            viewBox="0 0 24 24"
                                            fill="currentColor"
                                            class="w-6 h-6"
                                        >
                                            <path d="M12 0C5.37 0 0 5.37 0 12c0 5.3 3.438 9.8 8.205 11.385.6.11.82-.26.82-.577v-2.165c-3.338.726-4.042-1.61-4.042-1.61-.546-1.387-1.333-1.756-1.333-1.756-1.09-.745.083-.73.083-.73 1.205.084 1.84 1.237 1.84 1.237 1.07 1.835 2.807 1.305 3.492.997.108-.775.418-1.305.76-1.605-2.665-.305-5.466-1.335-5.466-5.93 0-1.31.467-2.38 1.235-3.22-.123-.303-.535-1.523.117-3.176 0 0 1.008-.322 3.3 1.23.957-.266 1.98-.398 3-.403 1.02.005 2.043.137 3 .403 2.29-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.873.12 3.176.77.84 1.233 1.91 1.233 3.22 0 4.61-2.803 5.62-5.475 5.92.43.37.823 1.102.823 2.222v3.293c0 .32.218.694.825.577C20.565 21.8 24 17.3 24 12c0-6.63-5.37-12-12-12z" />
                                        </svg>
                                    </a>
                                </div>
                                <ul class="flex justify-end gap-2">
                                    {project.tecnologies.map((tecnology) => (
                                        <li>
                                            <img
                                                src={`images/tools/${tecnology}.svg`}
                                                alt={tecnology}
                                                width="32"
                                                height="32"
                                            />
                                        </li>
                                    ))}
                                </ul>
                            </div>
                        </div>
                    </div>
                </li>
            ))
        }
    </ul>
</section>
